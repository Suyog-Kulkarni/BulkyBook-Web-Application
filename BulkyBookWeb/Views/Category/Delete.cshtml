@model Category

<form method="post" asp-action="Delete">
    @*VALUS FOR NAME AND DISPLAYORDER WILL GET DISPLAYED BY DEFAULT BECAUSE THEY HAVE VALUS IN THEM*@
    @*<input asp-for="Id" hidden /> instead of updating if new is getting created then use this stat.*@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="trxt-primary">Delete Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"> </label>
            <input asp-for="Name" disabled class="form-control" />@*
            <span asp-validation-for="Name" class="text-danger"></span>*@

        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"> </label>
            <input asp-for="DisplayOrder" disabled class="form-control" />@*
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>*@

        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        @*<button>Click</button>*@
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

